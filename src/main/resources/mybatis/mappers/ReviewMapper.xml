<mapper namespace="com.boot.dao.ReviewDAO">

    <select id="getReviewsByShopId" resultType="com.boot.dto.ReviewDTO">
        SELECT * FROM review
        WHERE repairShopId = #{ShopId}
        ORDER BY createdAt DESC
